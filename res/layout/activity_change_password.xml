<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="554dp"
	    android:background="#ffffff"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.jujiabao.login.Register" >
	    
	    <TableLayout 
	        android:id="@+id/change_pwd_table"
	        android:layout_height="165sp"
	        android:layout_width="fill_parent"
	        android:background="@drawable/block"
	        android:stretchColumns="1,2"
	        >
	        <!--鐧诲綍璐﹀佛  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:id="@+id/change_pwd_count_label"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/change_pwd_count_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"
		            />
		        <TextView 
		            android:id="@+id/change_pwd_count"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
		            android:textSize="20sp"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:textStyle="bold|italic"
		            />
	        </TableRow>
	        
	        <!--閲嶆柊杈揿叆瀵嗙爜  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/change_pwd_input_pwd"
		            android:textColor="#000000"
		            android:layout_marginTop="25dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/change_pwd_input_pwd"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="25dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:inputType="textPassword"
		            android:maxLength="16"/>
		        </TableRow>
	        <!--纭瀵嗙爜 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/change_pwd_conf_pwd"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/change_pwd_conf_pwd"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:inputType="textPassword"
		            android:maxLength="16"
		            />
		        </TableRow>
	    </TableLayout>
	
	    <TextView
		    android:layout_below="@+id/change_pwd_table"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="#EEE9E9"
		    android:gravity="center_vertical|center_horizontal"
		    android:text="@string/change_pwd_confirm"
		    android:textSize="20sp"
		    android:textColor="#000000"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
	   	<Button
		    android:id="@+id/change_pwd_confirm"
		    android:layout_below="@+id/change_pwd_table"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/btn_login_selector"
		    android:text="@string/change_pwd_confirm"
		    android:textSize="20sp"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
   		<Button
		    android:id="@+id/change_pwd_cancel"
		    android:layout_below="@+id/change_pwd_confirm"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/btn_login_selector"
		    android:text="@string/change_pwd_cancel"
		    android:textSize="20sp"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
   		<Button 
	   	    android:id="@+id/pwd_no_same1"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:background="@drawable/pwd_error"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginTop="65dp"
	   	    android:layout_marginRight="5dp"
	   	    android:visibility="invisible"
	   	    />
	   	<Button 
	   	    android:id="@+id/pwd_no_same2"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:background="@drawable/pwd_error"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginTop="125dp"
	   	    android:layout_marginRight="5dp"
	   	    android:visibility="invisible"
	   	    />
	</RelativeLayout>
</ScrollView>