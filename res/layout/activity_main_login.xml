<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

	<RelativeLayout
	    android:id="@+id/relative1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    tools:context="com.jujiabao.login.MainLogin" >

	    <EditText
	        android:id="@+id/user_name"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_marginTop="30sp"
	        android:background="@null"
	        android:drawableBottom="@drawable/gray_pane"
	        android:drawableLeft="@drawable/user_name_p"
	        android:drawableTop="@drawable/gray_pane"
	        android:gravity="left|center"
	        android:hint="@string/user_name_hint"
	        android:singleLine="true" />

	    <Button
	        android:id="@+id/delete1"
	        android:layout_width="15sp"
	        android:layout_height="15sp"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/user_name"
	        android:layout_marginRight="7sp"
	        android:layout_marginTop="15sp"
	        android:background="@drawable/btn_delete_selector" />

	    <EditText
	        android:id="@+id/user_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/user_name"
	        android:background="@null"
	        android:drawableBottom="@drawable/gray_pane"
	        android:drawableLeft="@drawable/password_p"
	        android:gravity="left|center"
	        android:hint="@string/user_pwd_hint"
	        android:inputType="textPassword"
	        android:singleLine="true" />

	    <Button
	        android:id="@+id/delete2"
	        android:layout_width="15sp"
	        android:layout_height="15sp"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/user_pwd"
	        android:layout_marginRight="7sp"
	        android:layout_marginTop="15sp"
	        android:background="@drawable/btn_delete_selector" />

	    <CheckBox
	        android:id="@+id/checkBox"
	        android:layout_width="wrap_content"
	        android:layout_height="28sp"
	        android:layout_alignLeft="@+id/register"
	        android:layout_below="@+id/user_pwd"
	        android:layout_marginTop="20dp"
	        android:text="@string/allow_pwd"
	        android:textColor="@color/blue" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/checkBox"
	        android:layout_marginLeft="15sp"
	        android:layout_marginRight="15sp"
	        android:layout_marginTop="10sp"
	        android:background="#EEE9E9"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/login_name"
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/login_confirm"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/checkBox"
	        android:layout_marginLeft="15sp"
	        android:layout_marginRight="15sp"
	        android:layout_marginTop="10sp"
	        android:background="@drawable/btn_login_selector"
	        android:text="@string/login_name"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/register"
	        android:layout_width="100sp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/login_confirm"
	        android:layout_marginLeft="15sp"
	        android:layout_marginTop="15sp"
	        android:background="@drawable/btn_pwd_selector"
	        android:drawableBottom="@drawable/blue_pane"
	        android:text="@string/register_name"
	        android:textColor="#0000FF"
	        android:textSize="16sp" />

	    <Button
	        android:id="@+id/forget_pwd"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/login_confirm"
	        android:layout_marginRight="15sp"
	        android:layout_marginTop="15sp"
	        android:background="@drawable/btn_pwd_selector"
	        android:drawableBottom="@drawable/blue_pane"
	        android:text="@string/forget_pwd_name"
	        android:textColor="#0000FF"
	        android:textSize="16sp" />

	    <CheckBox
	        android:id="@+id/checkBox_inter"
	        android:layout_width="wrap_content"
	        android:layout_height="28sp"
	        android:layout_above="@+id/textView1"
	        android:layout_alignRight="@+id/forget_pwd"
	        android:text="@string/allow_internet"
	        android:textColor="@color/blue" />

	</RelativeLayout>
	
	<Button
	       android:id="@+id/tips"
	       android:layout_height="50sp"
	       android:layout_width="fill_parent"
	       android:layout_alignParentBottom="true"
	       android:background="@drawable/btn_tips_selector"
	       android:textSize="18sp"
	       android:text="@string/tips_name"
	       android:drawableTop="@drawable/black_pane"
		/>
</RelativeLayout>