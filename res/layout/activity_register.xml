<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">		

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="554dp"
	    android:background="#ffffff"
	    >
	    
	    <TableLayout 
	        android:id="@+id/table"
	        android:layout_height="520sp"
	        android:layout_width="fill_parent"
	        android:background="@drawable/block"
	        android:stretchColumns="1,2"
	        >
	        <!--鐧诲綍璐﹀佛  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:id="@+id/count_label"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/count_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"
		            />
		        <EditText 
		            android:id="@+id/count"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            />
	        </TableRow>
	        <!--杈揿叆瀵嗙爜  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:id="@+id/pwd_label1"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/input_pwd_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/input_pwd"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:inputType="textPassword"
		            android:singleLine="true"
		            />
	        </TableRow>
	        <!--鍐嶆杈揿叆瀵嗙爜  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:id="@+id/confirm_pwd_label1"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/confirm_pwd_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/confirm_pwd"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:inputType="textPassword"
		            android:singleLine="true"
		            />
	        </TableRow>
	        <!--鐪熷疄濮揿悕  -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/name_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/true_name"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:maxLength="4"
		            />
		        </TableRow>
	        <!--韬唤璇佸佛 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/ID_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/Indenty"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:maxLength="18"
		            />
		        </TableRow>
	        <!--骞撮缎 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/age_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/input_age"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:inputType="number"
		            android:maxLength="16"
		            />
		        </TableRow>
	        <!--镐у埆 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/gender_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/gender"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:maxLength="16"
		            />
		        </TableRow>
	        <!-- 韬佩 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/height_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/height"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:inputType="number"
		            android:maxLength="16"
		            />
		        </TableRow>
	        <!--浣挞吨 -->
	        <TableRow 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            >
	            <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="@string/weight_label"
		            android:textColor="#000000"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="20dp"
		            android:textSize="18sp"/>
		        <EditText 
		            android:id="@+id/weight"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="20dp"
		            android:singleLine="true"
		            android:inputType="number"
		            android:maxLength="16"
		            />
		        </TableRow>
	    </TableLayout>
	
	    <TextView
		    android:layout_below="@+id/table"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="#EEE9E9"
		    android:gravity="center_vertical|center_horizontal"
		    android:text="@string/register_label"
		    android:textSize="20sp"
		    android:textColor="#000000"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
	   	<Button
		    android:id="@+id/register"
		    android:layout_below="@+id/table"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/btn_login_selector"
		    android:text="@string/register_label"
		    android:textSize="20sp"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
	   	<Button
		    android:id="@+id/have_count"
		    android:layout_below="@+id/register"
		    android:layout_marginTop="10sp"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/btn_login_selector"
		    android:text="@string/have_count_label"
		    android:textSize="20sp"
		    android:layout_marginLeft="15sp"
		    android:layout_marginRight="15sp"
		    />
	   	<Button 
	   	    android:id="@+id/imageView1"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:background="@drawable/pwd_error"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginTop="75dp"
	   	    android:layout_marginRight="5dp"
	   	    android:visibility="invisible"
	   	    />
	   	<Button 
	   	    android:id="@+id/imageView2"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:background="@drawable/pwd_error"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginTop="135dp"
	   	    android:layout_marginRight="5dp"
	   	    android:visibility="invisible"
	   	    />
	</RelativeLayout>
</ScrollView>