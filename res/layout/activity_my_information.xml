<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">		
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.jujiabao.ouruniversity.MyInformation"
	    android:background="#ffffff">
	
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/block"
	        >
	        
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="10sp"
	            android:layout_marginTop="25sp"
	            android:layout_marginBottom="25sp"
	            android:text="@string/pi"
	            android:textSize="40sp"
	            android:textColor="@color/orange"
	            android:gravity="center_vertical|center_horizontal"
	            />
	        
	        <TextView 
	            android:id="@+id/my_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_name"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	        <TextView 
	            android:id="@+id/my_age"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_age"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	        <TextView 
	            android:id="@+id/my_gender"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_gender"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	        <TextView 
	            android:id="@+id/my_height"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_height"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	        <TextView 
	            android:id="@+id/my_weight"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_weight"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	        <TextView 
	            android:id="@+id/my_create_time"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:drawableBottom="@drawable/gray_pane"
	            android:padding="10sp"
	            android:text="@string/my_create_time"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            />
	    </LinearLayout>
	</RelativeLayout>
</ScrollView>